<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.sudokuguifx.SudokuController">

    <HBox spacing="20" alignment="CENTER">
        <!-- Difficulty Label on the left -->
        <Label fx:id="difficultyLabel" text="Easy" style="-fx-font-size: 18px;" />

        <!-- Spacer to push the timer to the center -->
        <Region style="-fx-pref-width: 100%;" />

        <!-- Timer Label in the center -->
        <Label fx:id="timerLabel" text="00:00" style="-fx-font-size: 18px;" />

        <!-- Spacer to push the mistakes to the right -->
        <Region style="-fx-pref-width: 100%;" />

        <!-- Mistakes Label on the right -->
        <Label fx:id="mistakesLabel" text="Mistakes 0/3" style="-fx-font-size: 18px;" />
    </HBox>

    <GridPane fx:id="gridPane"
              hgap="5" vgap="5" alignment="CENTER">
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="pauseButton" text="Pause" onAction="#toggleTimer"/>
        <Button fx:id="exitButton" text="Exit" onAction="#handleExit"/>
    </HBox>

</VBox>