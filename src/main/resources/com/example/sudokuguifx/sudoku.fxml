<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.Priority?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.sudokuguifx.SudokuController">

    <!-- Center section: Sudoku grid -->
    <center>
        <VBox alignment="CENTER" style="-fx-padding: 10 0 0 0;">
            <Label fx:id="difficultyLabel" text="Easy"/>
            <HBox spacing="20" alignment="CENTER">
                <Label fx:id="timerLabel" text="00:00"/>
                <Region prefWidth="245"/>
                <Label fx:id="mistakesLabel" text="Mistakes 0/3"/>
            </HBox>
            <GridPane fx:id="gridPane" hgap="5" vgap="5" alignment="CENTER"/>
        </VBox>
    </center>

    <!-- Bottom section: Buttons -->
    <bottom>
        <HBox spacing="10" style="-fx-padding: 0 0 10 0" alignment="CENTER">
            <Button fx:id="solveButton" prefWidth="40" prefHeight="40" style="-fx-font-size: 15px;" onAction="#handleSolve"/>
            <Button fx:id="hintButton" text="3" prefWidth="40" prefHeight="40" style="-fx-font-size: 15px;" onAction="#handleHint"/>

            <Region prefWidth="5"/>
            <Button fx:id="newGameButton" text="New Game" prefWidth="100" prefHeight="40" style="-fx-font-size: 15px;" visible="false" onAction="#handleNewGame"/>
            <Region prefWidth="7"/>

            <Button fx:id="pauseButton" text="Pause" prefWidth="75" prefHeight="40" style="-fx-font-size: 15px;" onAction="#toggleTimer"/>
            <Button text="Exit" prefWidth="60" prefHeight="40" style="-fx-font-size: 15px;" onAction="#handleExit"/>
        </HBox>
    </bottom>
</BorderPane>
