<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.sudokuguifx.StartupController" alignment="CENTER" spacing="10">
    <!-- Dropdown menu for selecting difficulty -->
    <ChoiceBox fx:id="difficultyChoiceBox" value="Easy">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Easy"/>
                <String fx:value="Medium"/>
                <String fx:value="Hard"/>
                <String fx:value="Extreme"/>
            </FXCollections>
        </items>
    </ChoiceBox>

    <Button fx:id="startButton" text="Start Game" onAction="#handleStartGame"/>
    <Button text="Exit" onAction="#handleExit"/>
</VBox>
